{
    "title": "Conference",
    "type": "object",
    "properties": {
        "event_name": {
            "type": "string"
	},
        "event_venue": {
            "type": "string"
	},
       "event_url": {
	    "type": "string",
            "format": "uri"
        },
        "event_city": {
            "type": "string"
	},
        "event_start": {
	    "type": "integer"
	},
        "event_end": {
	    "type": "integer"
	},
	"event_schedule": {
            "type": "array",
	    "items": {
                "type": "object",
		"properties" : {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "start": {
                        "type": "integer"
                    },
	            "duration": {
                        "type": "integer"
                    },
                    "type": {
                        "type": "string"
                    },
	            "scheduled": {
                        "type": "string",
                        "enum" : [ "final", "day", "unknown" ]
                    },
                    "rooms": {
                        "type": "array",
			"items": {
                            "type": "string"
                        }
                    },
	            "speakers": {
                        "type": "array",
			"items": {
                            "type": "string"
                        }
                    }
                },
		"required": [
                    "id",
		    "name",
		    "start",
		    "duration",
		    "type",
		    "scheduled",
		    "rooms",
		    "speakers"
                ]
	    }
	}
    },
    "required": [
        "event_name",
        "event_start",
        "event_end"
    ]
}
